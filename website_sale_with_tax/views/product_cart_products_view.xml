<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

	<template id="products_cart_with_tax" inherit_id="website_sale.cart">
	    <xpath expr="//td[@name='price']" position="replace">
            <td class="text-center" name="price">
                <del class="text-danger" t-att-style="'' if (compute_currency(line.product_id.lst_price) - line.price_unit) &gt; 1 else 'display: none;'" style="text-decoration: line-through; white-space: nowrap;" t-field="line.product_id.lst_price" t-field-options='{
                    "widget": "monetary",
                    "from_currency": "line.company_id.currency_id",
                    "display_currency": "user_id.partner_id.property_product_pricelist.currency_id"
                }'/>&amp;nbsp;
                <span t-field="line.product_id.price_with_tax" style="white-space: nowrap;"/>
            </td>
	  </xpath>
	</template>

</data>
</openerp>